generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums based on the schema
enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

enum MimeType {
  // Common image types
  IMAGE_JPEG
  IMAGE_PNG
  IMAGE_WEBP
  // Common video types
  VIDEO_MP4
  // Common document types
  APPLICATION_PDF
  // Add others as needed
}

enum TierName {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

enum UserRole {
  USER
  ADMIN
  SPECIALIST
}

model File {
  id        String   @id @default(uuid()) @db.Uuid
  filename  String
  mimeType  String
  data      Bytes
  size      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("files")
}

model Specialist {
  id                      String             @id @default(uuid()) @db.Uuid
  average_rating          Decimal?           @default(0.0) @db.Decimal(3, 2)
  is_draft                Boolean            @default(true)
  total_number_of_ratings Int                @default(0)
  purchase_count          Int                @default(0)
  title                   String
  slug                    String             @unique
  description             String             @db.Text
  base_price              Decimal            @db.Decimal(10, 2)
  platform_fee            Decimal            @db.Decimal(10, 2)
  final_price             Decimal            @db.Decimal(10, 2)
  verification_status     VerificationStatus @default(PENDING)
  is_verified             Boolean            @default(false)
  
  // Secretary Profile
  secretary_name          String?
  secretary_company       String?
  secretary_company_logo  String?
  secretary_email         String?
  avatar_url              String?
  certifications          String[]           @default([])
  additional_offerings    Json?


  duration_days           Int
  created_at              DateTime           @default(now())
  updated_at              DateTime           @updatedAt
  deleted_at              DateTime?

  media             Media[]
  service_offerings ServiceOffering[]

  orders Order[]

  @@map("specialists")
}

model Media {
  id            String    @id @default(uuid()) @db.Uuid
  specialist_id String    @db.Uuid
  file_name     String
  file_size     Int
  display_order Int       @default(0)
  url           String
  mime_type     MimeType
  media_type    MediaType
  uploaded_at   DateTime  @default(now())
  deleted_at    DateTime?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  specialist Specialist @relation(fields: [specialist_id], references: [id], onDelete: Cascade)

  @@index([specialist_id])
  @@map("media")
}

model PlatformFee {
  id                      String   @id @default(uuid()) @db.Uuid
  tier_name               TierName
  min_value               Int
  max_value               Int
  platform_fee_percentage Decimal  @db.Decimal(5, 2)
  created_at              DateTime @default(now())
  updated_at              DateTime @updatedAt

  @@map("platform_fee")
}

model ServiceOfferingMasterList {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  description String   @db.Text
  s3_key      String?
  bucket_name String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  service_offerings ServiceOffering[]

  @@map("service_offerings_master_list")
}

model ServiceOffering {
  id                               String   @id @default(uuid()) @db.Uuid
  specialist_id                    String   @db.Uuid
  service_offerings_master_list_id String   @db.Uuid
  price                            Decimal? @db.Decimal(10, 2)
  created_at                       DateTime @default(now())
  updated_at                       DateTime @updatedAt

  specialist       Specialist                @relation(fields: [specialist_id], references: [id], onDelete: Cascade)
  master_list_item ServiceOfferingMasterList @relation(fields: [service_offerings_master_list_id], references: [id], onDelete: Cascade)

  @@index([service_offerings_master_list_id])
  @@map("service_offerings")
}


model Account {
  id                 String  @id @default(uuid()) @db.Uuid
  userId             String  @db.Uuid
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?   @map("photo_url") // Mapped existing photo_url to standard 'image' field for NextAuth
  password      String?   // For Credentials Auth
  
  role          UserRole  @default(USER)
  description   String?   @db.Text
  phone         String?
  company_name  String?
  company_logo_url String?
  certifications String[] @default([])
  clients_count Int       @default(0)
  experience_years Int    @default(0)
  firm_description String? @db.Text
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  registrations CompanyRegistration[]
  orders        Order[]
  invoices      Invoice[]
  notifications Notification[]
  documents     Document[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model CompanyRegistration {
    id String @id @default(uuid()) @db.Uuid
    userId String @db.Uuid @unique
    
    companyName String @map("company_name")
    companyType String? @map("company_type")
    companyLogoUrl String? @map("company_logo_url")
    
    status RegistrationStatus @default(PENDING)
    
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    user User @relation(fields: [userId], references: [id])

    @@map("company_registrations")
}

enum RegistrationStatus {
    PENDING
    IN_PROGRESS
    APPROVED
    REJECTED
    ACTION_REQUIRED
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  COMPLETED
}


model Order {
  id String @id @default(uuid()) @db.Uuid
  userId String? @db.Uuid
  specialistId String @db.Uuid
  
  amount Decimal @db.Decimal(10, 2)
  status OrderStatus @default(PENDING)
  
  // Guest/Customer Details
  customerName String?
  customerEmail String?
  customerPhone String?
  requirements String? @db.Text
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User? @relation(fields: [userId], references: [id])
  specialist Specialist @relation(fields: [specialistId], references: [id])
  invoice Invoice?

  @@map("orders")
}

model Invoice {
  id String @id @default(uuid()) @db.Uuid
  userId String? @db.Uuid
  orderId String? @unique @db.Uuid
  invoiceNumber String @unique // e.g., INV-001
  
  amount Decimal @db.Decimal(10, 2)
  status InvoiceStatus @default(PENDING)
  
  issuedDate DateTime @default(now()) @map("issued_date")
  dueDate DateTime? @map("due_date")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User? @relation(fields: [userId], references: [id])
  order Order? @relation(fields: [orderId], references: [id])

  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model Message {
  id String @id @default(uuid()) @db.Uuid
  senderName String
  senderEmail String
  subject String
  content String @db.Text
  isRead Boolean @default(false)
  isArchived Boolean @default(false)
  
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("messages")
}

model Document {
  id String @id @default(uuid()) @db.Uuid
  userId String? @db.Uuid
  title String
  url String
  
  status DocumentStatus @default(PENDING)
  
  sentDate DateTime @default(now()) @map("sent_date")
  signatoriesCount Int @default(0)
  signedCount Int @default(0)
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User? @relation(fields: [userId], references: [id])

  @@map("documents")
}

enum DocumentStatus {
  PENDING
  COMPLETED
  EXPIRED
  REJECTED
}

model Notification {
    id String @id @default(uuid()) @db.Uuid
    userId String @db.Uuid
    title String
    message String?
    isRead Boolean @default(false)
    
    createdAt DateTime @default(now()) @map("created_at")
    
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    @@map("notifications")
}
